<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/darkPrimaryColor</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:textColorPrimary">@color/iconsColor</item>
        <item name="android:windowBackground">@color/lightPrimaryColor</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorPrimary">@color/iconsColor</item>
        <item name="android:textColorSecondary">@color/iconsColor</item>
    </style>

</resources>
